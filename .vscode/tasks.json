{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "server:run",
      "type": "shell",
      "command": "python -m server.app",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "client:run",
      "type": "shell",
      "command": "python -m client.client",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "offline:run",
      "type": "shell",
      "command": "python -m server.offline_sim",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "test:unit",
      "type": "shell",
      "command": "python -m unittest discover -s tests -p 'test_*.py'",
      "options": { "cwd": "${workspaceFolder}" }
    }
  ]
}
